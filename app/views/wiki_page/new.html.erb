<h1>Create a new Wiki page</h1>

<%= form_for @page, url: wiki_page_index_url do |form| %>
  <%= form.fields_for :revisions, Revision.new do |ff| %>
  <div>
    <%= ff.label :title %>
    <%= ff.text_field :title %>

    <%= ff.label :content %>
    <%= ff.text_field :content %>
  </div>
<% end %>

  <%= form.submit 'Create Page' %>
<% end %>

<%= link_to 'Back', wiki_page_index_url %>

