<%- if controller_name != 'sessions' %>
  <p>
    <%= button_to 'Log in', new_session_path(resource_name), method: :get, class: "waves-effect waves-light btn blue accent-4"%>
  </p>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p>
  <%= button_to 'Sign up', new_registration_path(resource_name), method: :get, class: "waves-effect waves-light btn blue accent-4"%>
  </p>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p>
    <%= button_to 'Forgot your Password?', new_password_path(resource_name),
                  method: :get, class: "waves-effect waves-light btn blue accent-4"%>
  </p>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p>
    <%= button_to 'Need confirmation instructions?', new_confirmation_path(resource_name),
                  method: :get, class: "waves-effect waves-light btn blue accent-4"%>
  </p>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
  <p>
    <%= button_to 'Need unlock instructions?', new_unlock_path(resource_name),
                  method: :get, class: "waves-effect waves-light btn blue accent-4"%>
  </p>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <p>
      <%= button_to 'Sign in with #{OmniAuth::Utils.camelize(provider)}', omniauth_authorize_path(resource_name, provider),
                    method: :get, class: "waves-effect waves-light btn blue accent-4"%>
    </p>
  <% end -%>
<% end -%>
